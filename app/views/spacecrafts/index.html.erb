<div class="container">
  <h1>Tous les vaisseaux</h1>

  <div class="row">
    <div class="col-12 col-md-6">
    <% @spacecrafts.each do |spacecraft| %>
      <div class="card mr-2 mb-2">
        <div class="col-12">
          <div class="card-body d-flex" style="width: 18rem;">
            <%= image_tag("space-shuttle.jpg", size: "160x120") %>
            <div class="ml-4">
            <%= link_to spacecraft_path(spacecraft), class:'text-decoration-none' do %>
            <h3><%= spacecraft.name %></h3>
            <p><%= spacecraft.capacity %></p>
            <p><%= spacecraft.category %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <div class="col-12 col-md-6">
    <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
</div>
