<div class="container">
  <h1 class="mb-5">Tous les vaisseaux</h1>

  <div class="row">
    <div class="col-12 col-lg-6">
      <% @spacecrafts.each do |spacecraft| %>
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <%= cl_image_tag "#{spacecraft.photo.key}", size: "160x120" %>            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h4 class="card-title"><%= spacecraft.name %></h4>
                <p class="card-text">
                  <%= spacecraft.category %> <br/>
                  <i class="fa-solid fa-users"></i> <%= spacecraft.capacity %>
                </p>
                <a class="btn btn-success" type="button" href="<%= spacecraft_path(spacecraft) %>">Voir le d√©tail</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-12 col-lg-6">
      <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
