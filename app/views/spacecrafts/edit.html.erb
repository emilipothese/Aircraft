<div class="container">
  <h1 class="mb-5">Edit <%= @spacecraft.name %></h1>

  <%= simple_form_for (@spacecraft) do |f| %>
  <%= f.input :name %>
  <%= f.input :capacity %>
  <%= f.input :category %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Edit spaceship", class: "btn btn-success" %>
  <% end %>
</div>
