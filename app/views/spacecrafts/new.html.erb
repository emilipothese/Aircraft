<%= form_for(@spacecraft) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :capacity %>
  <%= f.number_field :capacity %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :user %>
  <%= f.text_field :user %>
  <%= f.label :photo %>
  <%# Ajouter un simple_form %>
  <%= f.input :photo, as: :file %>
  # ici il faudrait plutot aller chercher le "current_user" pour
  # l'inserer automatiquement dans le dans le field user ou
  # l'enregistrer automatiquement lors d'un nouvel enregistrement
  <%= f.submit %>
<% end %>
