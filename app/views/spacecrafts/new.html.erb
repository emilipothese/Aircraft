<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <h2 class="mb-5"><i class="fa-solid fa-rocket"></i> Create a spacecraft </h2>
        <%= simple_form_for (@spacecraft) do |f| %>
          <%= f.input :name %>
          <%= f.input :capacity %>
          <%= f.input :category %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Add a spaceship", class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>
