<div class="container">
  <h1 class="mb-5">Create a spacecraft</h1>
  <%= simple_form_for (@spacecraft) do |f| %>
    <%= f.input :name %>
    <%= f.input :capacity %>
    <%= f.input :category %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add a spaceship", class: "btn btn-success" %>
  <% end %>
</div>
