<%= simple_form_for(@spacecraft) do |f| %>
  <%= f.input :name %>
  <%= f.input :capacity %>
  <%= f.input :category %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :user %>
  <%= f.input :photo, as: :file %>
  # ici il faudrait plutot aller chercher le "current_user" pour
  # l'inserer automatiquement dans le dans le field user ou
  # l'enregistrer automatiquement lors d'un nouvel enregistrement
  <%= f.submit %>
<% end %>
