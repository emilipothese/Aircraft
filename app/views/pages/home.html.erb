<div class="card-home">
  <h1>Besoin d'un vaisseau pour conquérir l'univers ?</h1>
  <a class="btn btn-info p-3 mt-3" type="button" href="<%= spacecrafts_path %>">Tenter de conquérir le monde</a>
</div>
<div class="container mt-5">
  <h2 class="mb-3">The last three spacecrafts</h2>


  <div class="row">
    <div class="col-12 col-lg-6">
      <% @spacecrafts.last(3).each do |spacecraft| %>
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <%= cl_image_tag "#{spacecraft.photo.key}", class: "img-fluid rounded-start img-cover" %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h4 class="card-title"><%= spacecraft.name %></h4>
                <p class="card-text">
                  <%= spacecraft.category %> <br/>
                  <i class="fa-solid fa-users"></i> <%= spacecraft.capacity %>
                </p>
                <a class="btn btn-success" type="button" href="<%= spacecraft_path(spacecraft) %>">Voir le détail</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
